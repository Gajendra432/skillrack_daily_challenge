import java.util.*;
public class Hello {

    public static void main(String[] args) {
		//Your Code Here
		int sum=0;
		Scanner sc=new Scanner(System.in);
		int n=sc.nextInt();
		int[][] a=new int[n][n];
		for(int i=0;i<n;i++){
		    for(int j=0;j<n;j++){
		        a[i][j]=sc.nextInt();
		    
		if((i==0&&j==0)||(j==0&&i==n-1)||(i==0&&j==n-1)||(i==n-1&&j==n-1))
		
		    sum+=a[i][j];
		    }
		}
		 System.out.print(sum);   
	
		
		
		

	}
}
